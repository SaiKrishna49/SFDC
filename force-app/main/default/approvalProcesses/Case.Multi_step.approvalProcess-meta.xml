        </assignedApprover>
        <description>multi step 1</description>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Step_2_for_multistep_Approval</name>
                <type>FieldUpdate</type>
