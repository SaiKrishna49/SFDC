<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>approval_email_alert_for_project</fullName>
        <description>approval email alert for project</description>
        <protected>false</protected>
        <recipients>
            <recipient>krishna.sfdc@salesforce.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/approval_process</template>
    </alerts>
    <fieldUpdates>
        <fullName>Email_Update</fullName>
        <field>Email__c</field>
        <formula>IF( ISBLANK(Traning__r.Email__c) ,  $User.Email , Traning__r.Email__c)</formula>
        <name>Email Update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>true</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Field_update_one</fullName>
        <field>Approval_field_update__c</field>
        <literalValue>final approved</literalValue>
        <name>Field update one</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>approval_update</fullName>
        <field>Approval__c</field>
        <literalValue>Inprogress</literalValue>
        <name>approval update</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>field_update_two</fullName>
        <field>Approval_field_update__c</field>
        <literalValue>Final rejected</literalValue>
        <name>field update two</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Email Update from Training</fullName>
        <actions>
            <name>Email_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Project__c.Email__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <description>Task given in salesforce training</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
