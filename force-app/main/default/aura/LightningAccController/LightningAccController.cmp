<aura:component controller="LightningAccController"
                implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
   <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="ContactList" type="Contact[]" />
    <aura:handler name="init" value="{!this}" action="{!c.doinit}" />
    <lightning:card iconName="standard:contact_list" title="Account Related Contacts">
        <aura:if isTrue="{!not(empty(v.ContactList))}">
        <table class="slds-table slds-table_cell-buffer slds-table_bordered">
            <thead>
                <tr class="slds-line-height_reset">
                    <th class="slds-text-title_caps" scope="col">
                        <div class="slds-truncate" title="File Name">FirstName</div>
                    </th>
                    <th class="slds-text-title_caps" scope="col">
                        <div class="slds-truncate" title="File Name">LastName</div>
                    </th>
                </tr>
            </thead>
            <tbody>
                <aura:iteration  items="{!v.ContactList}" var="con">
                    <tr class="slds-hint-parent">
                        <td data-label="File Name">
                            <div class="slds-truncate" title="File Name">{!con.FirstName}</div>  
                        </td>
                        <td data-label="File Name">
                            <div class="slds-truncate" title="File Name">{!con.LastName}</div>  
                        </td>
                    </tr>
                </aura:iteration>
            </tbody>
        </table>
            <aura:set attribute="else">
            <div style="text-align : center">
                "No Related contacts for this Account"
                </div>
            </aura:set>
            </aura:if>
    </lightning:card>
    
</aura:component>